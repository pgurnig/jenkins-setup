    "Resources": {
        "JenkinsServer": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "Tags": [
                    {
                        "Key": "DIME",
                        "Value": "22476"
                    }
                ],
                "ImageId": "ami-0f7919c33c90f5b58",
                "InstanceType": "t2.micro",
                "KeyName": "eqr-ohio",
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": "true",
                        "DeviceIndex": "0",
                        "DeleteOnTermination": "true",
                        "SubnetId": "subnet-b7a23afb",
                        "GroupSet": [
                            "sg-0a391ec88b5acd095"
                        ]
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash -xe\n",
                                "sudo mkdir /var/lib/jenkins\n",
                                "sudo useradd -d /var/lib/jenkins jenkins\n",
                                "sudo chown jenkins:jenkins /var/lib/jenkins\n",
                                "sudo mkdir /var/lib/jenkins/.ssh\n",
                                "ssh-keygen -b 2048 -t rsa -f /tmp/id_rsa -q -N \"\"\n",
                                "sudo cp /tmp/id_rsa /var/lib/jenkins/.ssh/authorized_keys\n",
                                "sudo cp /tmp/id_rsa.pub /var/lib/jenkins/.ssh/\n",
                                "sudo yum install java-1.8.0-openjdk-devel -y\n",
                                "sudo yum install git -y\n",
                                "sudo yum install maven -y\n",
                                "sudo wget -O /etc/yum.repos.d/jenkins.repo http://pkg.jenkins.io/redhat-stable/jenkins.repo\n",
                                "sudo rpm --import http://pkg.jenkins.io/redhat-stable/jenkins.io.key\n",
                                "sudo yum install jenkins -y\n",
                                "sudo yum upgrade -y\n",
                                "sudo service jenkins start\n"
                            ]
                        ]
                    }
                }
            },
